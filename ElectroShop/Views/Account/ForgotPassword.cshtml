@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<style>
    .forgot-password-container {
        margin-left: 300px;
    }

    .spinner-border {
        display: none;
        width: 1rem;
        height: 1rem;
        vertical-align: text-bottom;
        border: .25em solid currentColor;
        border-right-color: transparent;
        border-radius: 50%;
        -webkit-animation: spinner-border .75s linear infinite;
        animation: spinner-border .75s linear infinite;
    }
</style>
<style>
    @@keyframes spinner-border {
        to {
            transform: rotate(360deg);
        }
    }
</style>
<h2></h2>
<br />
<div class="row">
    <div class="col-md-8 forgot-password-container">
        <section id="forgotPasswordForm">
            <form id="forgotPasswordForm">
                <h4>Nhập địa chỉ email của bạn.</h4>
                <hr />
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="form-control" required />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" id="submitButton">
                        <span id="buttonText">Gửi mã OTP</span>
                        <span class="spinner-border" id="loadingSpinner" role="status" aria-hidden="true"></span>
                    </button>
                </div>
            </form>
        </section>
    </div>
</div>
@section Scripts {
    <script>
       $(function () {
            console.log("Document ready");
            $('#forgotPasswordForm').submit(function (e) {
                console.log("Form submitted");
                e.preventDefault();

                // Disable button and show loading
                var $button = $('#submitButton');
                var $buttonText = $('#buttonText');
                var $loadingSpinner = $('#loadingSpinner');
                $button.prop('disabled', true);
                $buttonText.text('Đang gửi...');
                $loadingSpinner.show();

                $.ajax({
                    url: '@Url.Action("ForgotPassword", "Account")',
                    type: 'POST',
                    data: { email: $('#email').val() },
                    success: function (result) {
                        console.log("Ajax success", result);
                        // Reset button state
                        $button.prop('disabled', false);
                        $buttonText.text('Gửi mã OTP');
                        $loadingSpinner.hide();

                        if (result.success) {
                            swal({
                                icon: "success",
                                title: "Thành công!",
                                text: result.message,
                                timer: 3000
                            }).then(() => {
                                window.location.href = '@Url.Action("ResetPassword", "Account")';
                            });
                        } else {
                            swal({
                                icon: "error",
                                title: "Lỗi!",
                                text: result.message
                            });
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error("Ajax error", xhr, status, error);
                        // Reset button state
                        $button.prop('disabled', false);
                        $buttonText.text('Gửi mã OTP');
                        $loadingSpinner.hide();

                        swal({
                            icon: "error",
                            title: "Lỗi!",
                            text: "Có lỗi xảy ra khi gửi yêu cầu. Vui lòng thử lại."
                        });
                    }
                });
            });
        });
    </script>
}